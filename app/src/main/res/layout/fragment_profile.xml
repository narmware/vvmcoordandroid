<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/card_prof"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                app:layout_anchor="@+id/card_prof_top"
                android:elevation="5dp"
                app:layout_anchorGravity="top|center"
                android:layout_width="120dp"
                android:layout_height="110dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/prof_image"
                    android:src="@drawable/vvm_logo"
                    android:layout_width="110dp"
                    android:layout_margin="1dp"
                    android:layout_height="match_parent" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/profile_top_root"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="150dp"></ImageView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_prof_top"
                app:layout_anchor="@+id/profile_top_root"
                app:layout_anchorGravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_marginTop="45dp"
                        android:id="@+id/profile_name"
                        android:text="Rohit Savant"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_marginTop="5dp"
                        android:text="savantrohit8@gmail.com"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                      <TextView
                        android:id="@+id/profile_number"
                        android:text="8805250944"
                          android:layout_marginTop="5dp"
                          android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/profile_state"
                        android:textSize="16sp"
                        android:text="Punjab"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/grey_900"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/btn_logout"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/custom_call_btn"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:text="version 1.0"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_logout"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey_700"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>