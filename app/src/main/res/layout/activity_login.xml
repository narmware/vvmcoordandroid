                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_help"
                android:layout_width="@dimen/help_btn_width"
                android:layout_height="@dimen/help_btn_height" />-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/vvm_logo_old"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/login_img_margin_bottom"
            android:layout_width="@dimen/login_width"
            android:layout_height="@dimen/logo_height" />

        <EditText
            android:id="@+id/edt_username"
            android:hint="Username"
            style="@style/edittext_style"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="15dp"
            android:layout_margin="@dimen/login_txt_margin"
            android:background="@drawable/custom_edt"
            android:padding="@dimen/login_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_password"
            style="@style/edittext_style"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_vpn_key"
            android:drawablePadding="15dp"
            android:layout_margin="@dimen/login_txt_margin"
            android:background="@drawable/custom_edt"
            android:padding="@dimen/login_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/button_style"
            android:foreground="?attr/selectableItemBackground"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_btn_margin_bottom"
            android:layout_marginLeft="@dimen/login_btn_margin_left"
            android:layout_marginRight="@dimen/login_btn_margin_right"
            android:background="@drawable/custom_login_btn"
            android:text="Login"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_forgot"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"
            android:text="Forgot Password?"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:textColor="@color/red_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

