<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_sch_name"
        android:layout_centerVertical="true"
        android:text="Report schools for"
        android:layout_toLeftOf="@+id/btn_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif"
        style="@style/title_card"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:background="@drawable/custom_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/spinn_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_cancel"
        android:layout_margin="2dp"
        android:text="Cancel"
        android:minHeight="1dp"
        android:padding="10dp"
        android:background="@drawable/custom_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_margin="2dp"
        android:text="Send"
        android:minHeight="1dp"
        android:padding="10dp"
        android:background="@drawable/custom_login_btn"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>